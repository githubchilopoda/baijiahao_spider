$brand-color = #7d9ed3
$font-gray = #a0a0a0
$font-black = #434343
$background-color = #f5f5f5
$white = #ffffff
$border-gray = #f1f1f1
$font-blue = #88abda
$font-link-blue = #abc3e4
$brand-blue = #018be6

$font-size-0 = 10px
$font-size-1 = 12px
$font-size-2 = 13px
$font-size-3 = 14px
$font-size-4 = 15px

background-center()
	background-position: center
	background-size: cover
	background-repeat: no-repeat

background-wauto()
	background-position: center
	background-size: 100% auto
	background-repeat: no-repeat

.hidden
	opacity: 0
	display: none

.tpl
	display: none !important

body
	background-color: $background-color
	margin: 0
	min-height: 100%
	-webkit-text-size-adjust :100%
	*
		-webkit-user-select:none
		-webkit-touch-callout :none
		-webkit-tap-highlight-color :transparent
		outline :none
		word-break:break-all
		font-family:Arial
	.open-in-ex
		position: fixed
		top: 0
		left: 0
		width: 100%
		height: 100%
		background-image: url('/static/image/share-open-in-ex-340f32f344.png')
		background-size: 80% auto
		z-index: 1000
		background-position: right top
		background-repeat: no-repeat
		background-color: rgba(0, 0, 0, 0.8)
		display: none
	.download-tip
		height: 60px
		display: none
		background-color: rgba(0, 0, 0, 0.8)
		#share-download-logo
			background-image: url('/static/image/share-download-b251088229.png')
			background-size: auto 86%
			background-repeat: no-repeat
			height: 100%
			background-position: 5px center
			display: table-cell
			width: 60%
		#download-button
			height: 100%
			width: 0.4rem
			vertical-align: top
			text-align: right
			display: table-cell
			line-height: 60px
			button
				border: none
				margin-right: 10px
				border-radius: 30px
				height: 30px
				padding: 0 20px
				font-size: 14px
				text-align: center
				background-color: $brand-blue
				color: #ffffff
